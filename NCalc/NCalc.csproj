<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net6.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <UseWPF>true</UseWPF>
    <ApplicationIcon>Resources\abc-triangle.ico</ApplicationIcon>
    <Title>NeutralCurrentCalc</Title>
    <PackageIcon>abc-triangle-128.png</PackageIcon>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <Company>Vadim Zhukov</Company>
    <Copyright>© Vadim Zhukov 2025</Copyright>
    <Product>Neutral Current Calc</Product>
    <Description>Neutral current calculator</Description>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="Resources\abc-triangle.ico" />
  </ItemGroup>

  <ItemGroup>
    <None Update="Resources\abc-triangle-128.png">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
    <None Update="Resources\abc-triangle.png">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

</Project>
